# Environment Configuration for ProfileMatch

# LLM Provider: Choose 'openai' or 'claude'
LLM_PROVIDER=claude

# Disable CrewAI telemetry (set to true to disable connection errors)
OTEL_SDK_DISABLED=true

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic/Claude Configuration (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-haiku-20240307

# LLM Temperature (0.0-1.0)
OPENAI_TEMPERATURE=0.7

# Optional: Directory paths (if you want to customize)
PROFILES_DIR=profiles
JD_DIR=job_descriptions
